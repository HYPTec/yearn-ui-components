{
  "name": "yearn-ui-components",
  "version": "0.0.1",
  "description": "Yearn Finance UI components",
  "main": "index.js",
  "repository": "git@github.com:iearn-finance/yearn-ui-components.git",
  "author": "Eric Juta <ericjohnjuta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production rollup -c"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "autoprefixer": "^10.1.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.1",
    "prettier": "^2.2.1",
    "rollup": "^2.34.2",
    "rollup-plugin-postcss": "^4.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^0.2.0",
    "tailwindcss": "^2.0.2",
    "twin.macro": "^2.0.6"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "babelMacros": {
    "twin": {
      "config": "./src/tailwind.config.js",
      "preset": "styled-components"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,jsx,js}": [
      "prettier -w"
    ],
    "*.{jsx, js}": [
      "eslint â€”-max-warnings 0"
    ]
  }
}
